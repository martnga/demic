<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:background="@color/white"
            tools:context=".Login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_10dp"
        android:paddingRight="@dimen/pad_10dp"
        android:paddingTop="@dimen/pad_20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_image"
            android:src="@drawable/home"
            android:layout_marginBottom="@dimen/pad_30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            style="@style/edittext_graybg"
            android:drawableLeft="@drawable/ic_account_box_black_18dp"
            android:hint="@string/username"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwd"
            style="@style/edittext_graybg"
            android:drawableLeft="@drawable/ic_lock_outline_black_18dp"
            android:hint="@string/password"
            android:layout_marginBottom="@dimen/pad_20dp"
            android:layout_marginTop="@dimen/pad_15dp"
            android:inputType="textPassword"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:background="@color/main_color_green"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="@string/log_in"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReg"
                android:layout_weight="1"
                android:background="@color/main_color_green"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:text="@string/register"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>