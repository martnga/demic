<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:background="@drawable/sent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_5dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tetxt view"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp"
            android:layout_gravity="center_horizontal"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl2"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14sp"
            android:maxLines="4"
            />




    </LinearLayout>

    <TextView
        android:id="@+id/lbl3"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="text"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/txt_14sp"
        android:layout_alignRight="@+id/v1"
        android:layout_below="@+id/v1"
        android:layout_marginTop="@dimen/pad_5dp"
        android:layout_marginLeft="@dimen/pad_20dp"
        android:layout_weight="2.70" />

</LinearLayout>